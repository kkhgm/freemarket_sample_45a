.signin
  = render "users/shared/header"
  .signup__panel
    .signup__panel__title
      %h2 新規会員登録
    .signup__panel__field
      = button_to new_user_registration_path, method: :get, class: "btn email-btn" do
        %span.email-icon
          = icon "far", "envelope"
        メールアドレスで登録
      = link_to user_facebook_omniauth_authorize_path, class: "btn facebook-btn" do
        %span.facebook-icon
          = icon "fab", "facebook-square"
        Facebookで登録
      = link_to user_google_oauth2_omniauth_authorize_path, class: "btn google-btn" do
        %span.google-icon
          = icon "fab", "google"
        Googleで登録
  = render "users/shared/footer"