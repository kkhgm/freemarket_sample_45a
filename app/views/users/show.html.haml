            = link_to user_path(current_user), class: "mypage-content__tab-content__item-list__link" do
              %figure
                = image_tag("mercari_profile.png", size: "48x48")
              .mypage-content__tab-content__item-list__body
                .mypage-content__tab-content__item-list__body--text
